<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>UserBase ‚Äî SQLite3 CRUD Manager</title>
    <meta name="description"
        content="Manage users with full Create, Read, Update, and Delete operations powered by Express and SQLite3." />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="/index.css" />
</head>

<body>

    <!-- HEADER -->
    <header>
        <div class="logo-icon">üë•</div>
        <h1>UserBase</h1>
        <span class="header-sub">SQLite3 ¬∑ Express ¬∑ CRUD</span>
    </header>

    <!-- MAIN LAYOUT -->
    <main>
        <!-- LEFT: FORM PANEL -->
        <section class="card" id="form-panel">
            <div class="card-title">
                <span>‚úèÔ∏è</span> User Form
            </div>

            <div class="mode-badge create-mode" id="mode-badge">
                <span>Ôºã</span> Create Mode
            </div>

            <form id="user-form" novalidate>
                <input type="hidden" id="form-id" />

                <div class="form-group">
                    <label for="form-name">Username</label>
                    <input type="text" id="form-name" placeholder="e.g. john_doe" autocomplete="off" required />
                </div>

                <div class="form-group">
                    <label for="form-email">Email</label>
                    <input type="email" id="form-email" placeholder="e.g. john@example.com" autocomplete="off"
                        required />
                </div>

                <div class="form-group">
                    <label for="form-password">Password</label>
                    <input type="password" id="form-password" placeholder="Enter password" required />
                </div>

                <button type="submit" class="btn btn-primary" id="submit-btn">
                    <span>Ôºã</span> Create User
                </button>
                <button type="button" class="btn btn-cancel" id="cancel-btn" onclick="cancelEdit()">
                    ‚úï Cancel Edit
                </button>
            </form>
        </section>

        <!-- RIGHT: TABLE PANEL -->
        <section class="card">
            <div class="table-header">
                <div class="card-title" style="margin-bottom:0">
                    <span>üìã</span> All Users
                </div>
                <span class="user-count" id="user-count">‚Äî users</span>
            </div>

            <div class="search-wrap">
                <span class="search-icon">üîç</span>
                <input type="text" id="search-input" placeholder="Search by name or email‚Ä¶" oninput="filterTable()" />
            </div>

            <div class="table-scroll">
                <table id="users-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="table-body">
                        <tr class="loading-row">
                            <td colspan="4">Loading users‚Ä¶</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </section>
    </main>

    <!-- DELETE CONFIRM MODAL -->
    <div class="modal-overlay" id="delete-modal">
        <div class="modal">
            <h3>üóëÔ∏è Delete User</h3>
            <p>Are you sure you want to delete <span class="modal-user" id="modal-username"></span>? This action cannot
                be undone.</p>
            <div class="modal-btns">
                <button class="btn btn-cancel" style="display:flex" onclick="closeModal()">Cancel</button>
                <button class="btn btn-danger" id="confirm-delete-btn">Delete</button>
            </div>
        </div>
    </div>

    <!-- TOAST -->
    <div id="toast"></div>

    <script src="/index.js"></script>
</body>

</html>